<% include partials/header.ejs %>

<div class="container">
<header class="jumbotron">
<h1>Welcome to the campground page</h1>
	<p>you can view here the best camping sites in india</p>
    <a class="btn btn-primary brn-large" href="/campgrounds/new">add new campground</a>
</header>
<div class="row text-center" style="display:flex; flex-wrap:wrap;">
	<% place.forEach(function(places){ %>
    <div class="col-md-4 col-sm-6">
		<div class="thumbnail">
	  <img src="<%= places.image %>">
	<div class="caption">
		<h3><%= places.name %></h3>
	</div>
		<p><a href="/campgrounds/<%= places._id %>" class="btn btn-primary">More Info</a></p>		
	</div>
	</div>
<% }) %>
</div>
	
</div>



	
